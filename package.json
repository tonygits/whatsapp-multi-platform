    "@types/swagger-ui-express": "^4.1.8",
    "@types/tar": "^6.1.13",
    "@types/ws": "^8.18.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
