{
  "name": "whatsapp-multi-platform",
  "version": "1.0.0",
  "description": "Plataforma escalável para gerenciar múltiplos números de WhatsApp utilizando containers Docker",
  "main": "src/server.ts",
  "scripts": {
    "build": "tsc",
    "postbuild": "mkdir -p dist/database && cp src/database/schema.sql dist/database/schema.sql",
    "start": "node dist/server.js",
    "start:ts": "ts-node src/server.ts",
    "dev": "nodemon --exec ts-node src/server.ts",
    "docker:compose": "docker-compose up -d --build",
    "test": "jest",
    "logs": "docker-compose logs -f"
  },
  "keywords": [
    "whatsapp",
    "docker",
    "api",
    "scaling",
    "multidevice"
  ],
  "author": "WPP Platform",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.879.0",
    "axios": "^1.6.2",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "cron": "^3.1.6",
    "dockerode": "^4.0.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-list-endpoints": "^7.1.1",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "qrcode": "^1.5.3",
    "socket.io": "^4.7.4",
    "sqlite3": "^5.1.6",
    "swagger-autogen": "^2.23.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "tar": "^7.4.3",
    "uuid": "^11.1.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.19.11",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/tar": "^6.1.13",
    "@types/ws": "^8.18.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "typescript": "^5.9.2"
  }
}
