{
  "name": "whatsapp-multi-platform",
  "version": "1.0.0",
  "description": "Scalable platform to manage multiple WhatsApp numbers using Docker containers",
  "main": "src/server.ts",
  "scripts": {
    "build": "tsc",
    "postbuild": "mkdir -p dist/database && cp src/database/schema.sql dist/database/schema.sql",
    "start": "node dist/server.js",
    "start:ts": "ts-node src/server.ts",
    "dev": "nodemon --exec ts-node src/server.ts",
    "docker:compose": "docker-compose up -d --build",
    "test": "jest",
    "logs": "docker-compose logs -f",
    "watch": "tsc -w",
    "remove": "rm -rf ./build",
    "build:lib": "tsc"
  },
  "keywords": [
    "whatsapp",
    "docker",
    "api",
    "scaling",
    "multidevice"
  ],
  "author": "WPP Platform",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.879.0",
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.9",
    "@types/express-session": "^1.18.2",
    "@types/passport-google-oauth20": "^2.0.16",
    "axios": "^1.6.2",
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "cron": "^3.1.6",
    "dayjs": "^1.11.19",
    "dockerode": "^4.0.0",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-list-endpoints": "^7.1.1",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.18.2",
    "google-auth-library": "^10.4.1",
    "helmet": "^7.1.0",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "node-fetch": "^3.3.2",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "pg": "^8.16.3",
    "qrcode": "^1.5.3",
    "socket.io": "^4.7.4",
    "sqlite3": "^5.1.6",
    "swagger-autogen": "^2.23.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "tar": "^7.4.3",
