# WhatsApp Multi-Platform Environment Configuration

# =========================
# API GATEWAY SETTINGS
# =========================
NODE_ENV=production
API_PORT=3000
DEFAULT_ADMIN_USER=admin
DEFAULT_ADMIN_PASS=admin
API_RATE_LIMIT=100

# =========================
# AUTHENTICATION
# =========================
API_AUTH_ENABLED=true
DEFAULT_ADMIN_USER=admin
DEFAULT_ADMIN_PASS=admin

# =========================
# DOCKER SETTINGS
# =========================
DOCKER_SOCKET=/var/run/docker.sock

# =========================
# PATHS
# =========================
LOGS_PATH=./logs

# =========================
# LOGGING
# =========================
# Log level: error, warn, info, debug
# Use 'warn' or 'error' in production to reduce log volume
LOG_LEVEL=info

# =========================
# UPDATE MANAGER
# =========================
UPDATE_CHECK_CRON='0 2 * * *'
AUTO_UPDATE_ENABLED=true

# =========================
# BACKUP SETTINGS
# =========================
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 3 * * *
BACKUP_TIMEZONE=America/Sao_Paulo
BACKUP_MAX_BACKUPS=3
BACKUP_STOP_INSTANCES=false

# S3 Configuration for Backups
BACKUP_S3_BUCKET=
BACKUP_S3_REGION=us-east-1
BACKUP_S3_ACCESS_KEY=
BACKUP_S3_SECRET_KEY=
BACKUP_S3_ENDPOINT=

# Backup Security
BACKUP_COMPRESSION_LEVEL=6
BACKUP_ENCRYPTION_KEY=

# =========================
# OTHER
# =========================
MASK_PHONE_NUMBERS=true
HEALTH_CHECK_INTERVAL=30000
